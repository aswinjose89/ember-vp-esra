 {{wb-md-radio-group
                title=componentConfig.escalatedBRRRC.title 
                required=componentConfig.escalatedBRRRC.required
                action=componentConfig.escalatedBRRRC.action
                selectedItem=dataJSON.headerDataJSON.escalatedBRRRC
                content=componentConfig.escalatedBRRRC.content}}
 {{/if}}
   
